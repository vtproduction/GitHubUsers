<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.midsummer.githubusers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GithubUsersApplication"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUsers">
        <activity
            android:name=".views.ui.ScrollingActivity"
            android:exported="true"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.GitHubUsers.NoActionBar" />
        <activity
            android:name=".views.ui.userDetail.UserDetailActivity"
            android:exported="true" />
        <activity
            android:name=".views.ui.userList.UserListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>